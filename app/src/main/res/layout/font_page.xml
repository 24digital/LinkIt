<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:layout_row="3"
    android:orientation="vertical">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:"
            android:id="@+id/email_header" android:layout_row="1" android:layout_column="1" android:textSize="24dp"
            android:textStyle="bold" android:textColor="#ff080808" android:textAlignment="center"/>
    <EditText
            android:layout_width="388dp"
            android:layout_height="371dp"
            android:id="@+id/editText" android:layout_row="2" android:layout_column="1" android:background="#ff646464"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/close_button" android:layout_row="3" android:layout_column="1"/>
</GridLayout>